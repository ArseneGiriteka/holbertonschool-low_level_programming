CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))
OBJR = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm -f

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(echo $(OBJ | grep '.o' )) : $(echo $(SRC) | grep '.c')
	$(CC) -c -o $@ $?

clean : 
	$(RM) *~ $(NAME)
	rm -f .*~
	rm -f *.swp
	rm -f *.swo
	rm -f *.swn
oclean :
	$(RM) *.o

fclean : clean oclean

re : oclean all
