CC = gcc
SRC = main.c school.c
OBJ = $(patsubst %.c, %.o, $(SRC))
OBJR = $(patsubst %.c, %.o, $(SRC))
NAME = school
RM = rm -f

all : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

$(echo $(OBJ | grep '.o' )) : $(echo $(SRC) | grep '.c')
	$(CC) -c -o $@ $?

re : oclean all

clean : 
	$(RM) *~
	$(RM) .*~
	$(RM) *.swp
	$(RM) *.swo
	$(RM) *.swn

oclean :
	$(RM) *.o

fclean : clean oclean
